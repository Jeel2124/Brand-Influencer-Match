export default async function handler(req, res) {
  if (req.method === 'POST') {
    try {
      const influencers = req.body; // Zapier sends data here as JSON
      
      // For now, just log it to console (will appear in Vercel logs)
      console.log("Received influencers data:", influencers);

      // TODO: You can later save this to DB or cache here

      return res.status(200).json({ message: 'Data received successfully', data: influencers });
    } catch (error) {
      console.error("Error processing influencers data:", error);
      return res.status(500).json({ message: 'Internal server error' });
    }
  } else {
    // Only accept POST requests
    return res.status(405).json({ message: 'Method Not Allowed' });
  }
}
